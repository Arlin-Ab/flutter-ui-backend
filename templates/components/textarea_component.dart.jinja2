Positioned(
  top: {{ styles.top }} * screenHeight,
  left: {{ styles.left }} * screenWidth,
  child: SizedBox(
    width: {{ styles.width }} * screenWidth,
    height: {{ styles.height }} * screenHeight,
    child: TextField(
      maxLines: null,
      decoration: InputDecoration(
        hintText: {{ component.placeholder | tojson or '"Escribe aqu√≠..."' }},
        filled: true,
        fillColor: Color(0xFF{{ styles.cellBgColor[1:] }}),
        border: OutlineInputBorder(
          borderRadius: BorderRadius.circular({{ styles.borderRadius | replace('px', '') | float | default(12) }}),
          borderSide: BorderSide(
            color: Color(0xFF{{ styles.borderColor[1:] if styles.borderColor else 'cccccc' }}),
            width: 1.0,
          ),
        ),
        contentPadding: EdgeInsets.all({{ styles.cellPadding or 12 }}),
      ),
      style: TextStyle(
        fontSize: {{ styles.fontSize or 14 }},
        color: Color(0xFF{{ styles.color[1:] if styles.color else '000000' }}),
      ),
    ),
  ),
)
